@Model Event
<div class='scores-info-container active' data-scoreboard-section='scores'>
	<div class='scores'>
		<div data-draw-id='<%- competition.currentDrawId %>' class='games-container'>
			<div class='select-wrapper scores-draw-wrapper'>
				<select class='game-time-name' onchange="updateDrawId(<%- competition.eventId %>, $(this).val());">
					<% for (var i = 0; i < competition.draws.length; i++){ %>
						<option value='<%- competition.draws[i].drawId %>' class='game-time-name-option' <%- (competition.draws[i].drawId == competition.currentDrawId ? "selected" : "") %>><%- functions.formatDate(new Date(competition.draws[i].startsAt * 1000), "dddd h:mmtt ") %> - <%- competition.draws[i].displayName %> </option>
					<% } %>
				</select>
			</div>
			<% include scores-games %>
		</div>
	</div>
</div>
<script>
	currentDrawId = "<%= (typeof(competition.currentDrawId) != "undefined" ? competition.currentDrawId : "") %>";
</script>